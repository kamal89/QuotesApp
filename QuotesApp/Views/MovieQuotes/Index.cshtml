@model IEnumerable<QuotesApp.Models.MovieQuote>

@{
    ViewData["Title"] = "Index";
}

<h1>Browse Quotes</h1>

<p>
    <a asp-action="Create">Add a quote to the database</a>
</p>
<p>
    <a asp-action="Random">Get a list of 5 random quotes</a>
</p>
<form asp-controller="MovieQuotes" asp-action="Index" method="get">
    <p>
        Search Quotes: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieQuoteId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieQuoteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
